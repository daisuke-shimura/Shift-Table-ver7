<%= form_with model:[week, job], local: false do |f| %>
<table class="table table-bordered">
  <thead>
    <%= render "header-form", week:week %>
  </thead>
  <tbody>
    <% if week.is_invisible %>
      <% users.each do |user| %>
        <% if user == login_user %>
          <tr class="">
            <td><%= login_user.full_name %></td>
            <% (1..7).each do |n| %>
              <td><%= f.text_area :"time#{n}", value: login_user.job_for(jobs)&.public_send("time#{n}"), class: 'form-control' %></td>
            <% end %>
            <td><%= f.text_area :comment ,value: login_user.job_for(jobs)&.comment, class: 'form-control' %></td>
            <td class=" text-nowrap">
              <%= link_to "キャンセル", week_jobs_path(week.id), class: "btn btn-outline-primary no-hover-reverse" %>
              <%= f.submit "保存", class: "btn btn-primary " %>
            </td>
          </tr>
        <% else %>
        <tr class="">
          <td><%= user.full_name %></td>
          <% (1..7).each do |n| %>
            <td><%= user.job_for(jobs)&.public_send("time#{n}") %></td>
          <% end %>
          <td><%= user.job_for(jobs)&.comment %></td>
          <td></td>
        </tr>
        <% end %>
      <% end %>
    <% else %>
      <tr class="">
        <td><%= login_user.full_name %></td>
        <% (1..7).each do |n| %>
          <td><%= f.text_area :"time#{n}", value: login_user.job_for(jobs)&.public_send("time#{n}"), class: 'form-control' %></td>
        <% end %>
        <td><%= f.text_area :comment ,value: login_user.job_for(jobs)&.comment, class: 'form-control' %></td>
        <td>
          <%= f.submit '更新', class: 'btn btn-primary' %>
          <br>
          <%= link_to "戻る",
            week_jobs_path(week.id),
            data: { turbo_frame: "week_content_#{week.id}" },
            class: "btn btn-secondary" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
