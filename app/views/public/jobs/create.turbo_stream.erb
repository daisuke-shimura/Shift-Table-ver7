<%= turbo_stream.replace "week_form_#{@week.id}_user_#{@user.id}" do %>
  <div id="week_form_<%= @week.id %>_user_<%= @user.id %>">
    <%= render "public/jobs/new-form", week: @week, job: @job, login_user: @user %>
  </div>
<% end %>

<%= turbo_stream.replace "week_index_#{@week.id}" do %>
  <div id ="week_index_<%= @week.id %>">
    <h3 class="text-accent">希望一覧</h3>
  </div>
<% end %>

<% if @setting.is_visible %>
  <%= turbo_stream.replace "week_content_#{@week.id}" do %>
      <%= render "public/jobs/public-shift", week: @week, users: @users, jobs: @jobs %>
  <% end %>

  <%= turbo_stream.replace "week_button_#{@week.id}" do %>
    <div id="week_button_<%= @week.id %>">
      <%= render "public/jobs/button", week: @week, users: @users, jobs: @jobs, login_user: @user %>
    </div>
  <% end %>
<% else %>
  <%= turbo_stream.append "week_title_#{@week.id}" %>

  <%= turbo_stream.replace "week_private_#{@week.id}" do %>
    <div id="week_private_<%= @week.id %>">
      <%= render "public/jobs/private-shift", week: @week, jobs: @jobs, job: @job, login_user: @user %>
    </div>
  <% end %>
<% end %>
