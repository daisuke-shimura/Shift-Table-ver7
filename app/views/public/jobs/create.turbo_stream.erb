<%= turbo_stream.replace "week_form_#{@week.id}_user_#{@user.id}" do %>
  <div id="week_form_<%= @week.id %>_user_<%= @user.id %>">
    <%= render "public/jobs/new-form", week: @week, job: @job, login_user: @user %>
  </div>
<% end %>

<%= turbo_stream.replace "week_content_#{@week.id}" do %>
    <%= render "public/jobs/broadcast", week: @week, users: @users, jobs: @jobs %>
<% end %>

<%= turbo_stream.replace "week_button_#{@week.id}" do %>
  <div id="week_button_<%= @week.id %>">
    <%= render "public/jobs/button", week: @week, users: @users, jobs: @jobs, login_user: @user %>
  </div>
<% end %>
