<tr class="table-lightblue">
  <th class="sticky-col top-left"></th>
  <th class="<%= holiday_class(week.monday) %> text-center table-week"><%= day_header(week.monday) %></th>
  <th class="<%= holiday_class(week.tuesday) %> text-center table-week"><%= day_header(week.tuesday) %></th>
  <th class="<%= holiday_class(week.wednesday) %> text-center table-week"><%= day_header(week.wednesday) %></th>
  <th class="<%= holiday_class(week.thursday) %> text-center table-week"><%= day_header(week.thursday) %></th>
  <th class="<%= holiday_class(week.friday) %> text-center table-week"><%= day_header(week.friday) %></th>
  <th class="<%= holiday_class(week.saturday) || 'text-primary' %> text-center table-week"><%= day_header(week.saturday) %></th>
  <th class="text-danger text-center table-week"><%= day_header(week.sunday) %></th>
  <th class="text-nowrap text-center table-comment">備考</th>
</tr>
