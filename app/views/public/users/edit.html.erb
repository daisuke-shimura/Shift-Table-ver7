<h2 class="text-accent">名前編集</h2>
<%= form_with model: @user, url: users_path, method: :patch do |f| %>
  <div class="row mb-3 align-items-end">
    <div class="col-4">
      <%= f.label :last_name, "姓", class: "form-label" %>
    </div>
    <div class="col-8">
      <%= f.text_field :last_name, class: "form-control", required: true %>
    </div>
  </div>

  <div class="row mb-3 align-items-end">
    <div class="col-4">
      <%= f.label :first_name, "名", class: "form-label" %>
    </div>
    <div class="col-8">
      <%= f.text_field :first_name, class: "form-control", required: true %>
    </div>
  </div>

  <div class="mb-3">
    <%= link_to "キャンセル", mypage_path, class: "btn btn-outline-primary" %>
    <%= f.submit "更新", class: "btn btn-primary" %>
  </div>

<% end %>
