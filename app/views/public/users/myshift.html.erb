<h2 class="text-accent">固定シフト登録</h2>
<%= form_with model: @user, url: users_path, method: :patch do |f| %>
  <div class="table-responsive">
    <table class="table table-bordered text-center">
      <thead>
        <tr class="table-lightblue">
          <th class="table-week">月</th>
          <th class="table-week">火</th>
          <th class="table-week">水</th>
          <th class="table-week">木</th>
          <th class="table-week">金</th>
          <th class="text-primary table-week">土</th>
          <th class="text-danger table-week">日</th>
          <th class="text-nowrap table-comment">備考</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <% (1..7).each do |n| %>
            <td><%= f.text_area :"time#{n}", class: 'form-control' %></td>
          <% end %>
          <td><%= f.text_area :comment, class: 'form-control' %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <%= link_to 'キャンセル', mypage_path, class: 'btn btn-outline-primary no-hover-reverse' %>
  <%= f.submit "保存", class: "btn btn-primary" %>
<% end %>
