<div class="d-flex justify-content-center align-items-center">
  <div class="card border-0 shadow m-3 p-4" style="width: 360px; border-radius: 1rem; background-color: #fff6f9;">
    <h2 class="d-inline-flex justify-content-center align-items-center mb-4 fw-bold text-accent">
      <span class="material-symbols-outlined" style="font-size: 2rem; vertical-align: middle;">
        manage_accounts
      </span>
      管理者ログイン
    </h2>

    <% if flash[:alert] %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%= flash[:alert] %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% end %>

    <%= form_with model: @admin, url: admin_session_path, class: "needs-validation" do |f| %>
      <%= f.hidden_field :email, value: "admin@example.com" %>

      <div class="mb-3">
        <%= f.label :password, "パスワード", class: "form-label fw-semibold text-accent" %>
        <%= f.password_field :password,
              class: "form-control form-control-lg original-input",
              autofocus: true,
              autocomplete: "current-password",
              placeholder: "••••••",
              required: true %>
      </div>

      <div class="d-grid mt-4">
        <button type="submit" class="btn-login">ログイン</button>
      </div>
    <% end %>
  </div>
</div>
